{
  "name": "@shoper/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsc && concurrently -k -p -c \"yellow.bold,cyan.bold\" --names=\"TypeScript,Fastify\" \"tsc -w\" \"node --watch dist/server.js\"",
    "dev2": "tsc -w && nodemon --exec \"fastify start -w -l info -P dist/app.js\"",
    "dev3": "fastify start -w -l info -P --watch dist/app.js",
    "build": "tsc",
    "start": "fastify start -l info --address 0.0.0.0 dist/app.js",
    "lint": "eslint ./src",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/env": "^5.0.1",
    "fastify": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.9.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.14.0",
    "install": "^0.13.0",
    "nodemon": "^3.1.7",
    "npm": "^10.9.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
