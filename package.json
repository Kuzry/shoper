{
  "name": "shoper",
  "private": true,
  "scripts": {
    "build": "",
    "dev:website": "npm run dev -w @shoper/website",
    "dev:helpers": "npm run dev -w @shoper/helpers",
    "deploy:website": "fly deploy ./apps/website",
    "lint": "npm run lint:website && npm run lint:helpers",
    "lint:website": "npm run lint -w @shoper/website",
    "lint:helpers": "npm run lint -w @shoper/helpers",
    "type-check": "npm run type-check:website && npm run type-check:helpers",
    "type-check:website": "npm run type-check -w @shoper/website",
    "type-check:helpers": "npm run type-check -w @shoper/helpers",
    "prettier-check": "prettier --check .",
    "husky-prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8"
  }
}
