{
  "name": "shoper",
  "private": true,
  "scripts": {
    "start:billing-api": "npm run start -w @shoper/billing-api",
    "start:billing-api-nestjs": "npm run start -w @shoper/billing-api-nestjs",
    "build": "npm run build:db && npm run build:helpers && npm run build:billing-api && npm run build:billing-api-nestjs",
    "build:billing-api": "npm run build -w @shoper/billing-api",
    "build:billing-api-nestjs": "npm run build -w @shoper/billing-api-nestjs",
    "build:db": "npm run build -w @shoper/db",
    "build:helpers": "npm run build -w @shoper/helpers",
    "dev:billing-api": "npm run dev -w @shoper/billing-api",
    "dev:billing-api-nestjs": "npm run dev -w @shoper/billing-api-nestjs",
    "dev:db": "npm run dev -w @shoper/db",
    "dev:helpers": "npm run dev -w @shoper/helpers",
    "deploy:billing-api": "fly deploy --config apps/billing-api/fly.toml --dockerfile apps/billing-api/Dockerfile --ignorefile .dockerignore",
    "deploy:billing-api-nestjs": "fly deploy --config apps/billing-api/fly.toml --dockerfile apps/billing-api/Dockerfile --ignorefile .dockerignore",
    "lint": "npm run lint:db && npm run lint:helpers && npm run lint:billing-api && npm run lint:billing-api-nestjs",
    "lint:billing-api": "npm run lint -w @shoper/billing-api",
    "lint:billing-api-nestjs": "npm run lint -w @shoper/billing-api-nestjs",
    "lint:db": "npm run lint -w @shoper/db",
    "lint:helpers": "npm run lint -w @shoper/helpers",
    "type-check": "npm run type-check:db && npm run type-check:helpers && npm run type-check:billing-api && npm run type-check:billing-api-nestjs",
    "type-check:billing-api": "npm run type-check -w @shoper/billing-api",
    "type-check:billing-api-nestjs": "npm run type-check -w @shoper/billing-api-nestjs",
    "type-check:db": "npm run type-check -w @shoper/db",
    "type-check:helpers": "npm run type-check -w @shoper/helpers",
    "prettier-check": "prettier --check .",
    "husky-prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8"
  }
}
