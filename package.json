{
  "name": "shoper",
  "private": true,
  "scripts": {
    "start:nestjs:billing-api": "npm run start:billing-api -w @shoper/nestjs",
    "start:prod:nestjs:billing-api": "npm run start:billing-api -w @shoper/nestjs",
    "start:nestjs:webhook-api": "npm run start:webhook-api -w @shoper/nestjs",
    "start:prod:nestjs:webhook-api": "npm run start:webhook-api -w @shoper/nestjs",
    "start:nextjs:control-panel": "npm run start -w @shoper/control-panel",
    "build": "npm run build:db && npm run build:helpers",
    "build:nestjs:billing-api": "npm run build:billing-api -w @shoper/nestjs",
    "build:nestjs:webhook-api": "npm run build:webhook-api -w @shoper/nestjs",
    "build:nextjs:control-panel": "npm run build -w @shoper/control-panel",
    "build:db": "npm run build -w @shoper/db",
    "build:helpers": "npm run build -w @shoper/helpers",
    "dev:nestjs:billing-api": "npm run dev:billing-api -w @shoper/nestjs",
    "dev:nestjs:webhook-api": "npm run dev:webhook-api -w @shoper/nestjs",
    "dev:nextjs:control-panel": "npm run dev -w @shoper/control-panel",
    "dev:db": "npm run dev -w @shoper/db",
    "dev:helpers": "npm run dev -w @shoper/helpers",
    "deploy:nestjs:billing-api": "fly deploy --config apps/nestjs/apps/billing-api/fly.toml --dockerfile apps/nestjs/apps/billing-api/Dockerfile --ignorefile .dockerignore",
    "deploy:nestjs:webhook-api": "fly deploy --config apps/nestjs/apps/webhook-api/fly.toml --dockerfile apps/nestjs/apps/webhook-api/Dockerfile --ignorefile .dockerignore",
    "deploy:nextjs:control-panel": "fly deploy --config apps/nextjs/control-panel/fly.toml --dockerfile apps/nextjs/control-panel/Dockerfile --ignorefile .dockerignore",
    "lint": "npm run lint:db && npm run lint:helpers && npm run lint:nestjs && npm run lint:nextjs:control-panel",
    "lint:nestjs": "npm run lint -w @shoper/nestjs",
    "lint:nextjs:control-panel": "npm run lint -w @shoper/control-panel",
    "lint:db": "npm run lint -w @shoper/db",
    "lint:helpers": "npm run lint -w @shoper/helpers",
    "type-check": "npm run type-check:db && npm run type-check:helpers && npm run type-check:nestjs && npm run type-check:nextjs:control-panel",
    "type-check:nestjs": "npm run type-check -w @shoper/nestjs",
    "type-check:nextjs:control-panel": "npm run type-check -w @shoper/control-panel",
    "type-check:db": "npm run type-check -w @shoper/db",
    "type-check:helpers": "npm run type-check -w @shoper/helpers",
    "prettier-check": "prettier --check .",
    "husky-prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "apps/nestjs/*",
    "apps/nextjs/*",
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9"
  }
}
